{
  "name": "@scraper/implementation",
  "description": "Scraper",
  "version": "0.0.1",
  "main": "index.js",
  "types": "index.d.ts",
  "author": "Xifr√© Font",
  "license": "MIT",
  "scripts": {
    "start": "nodemon src --exec \"node -r dotenv/config -r ts-node/register --inspect\" src/index.ts",
    "build": "rimraf build && tsc src/*.ts && tsc",
    "dev": "nodemon --watch src --watch .env --exec \"node -r dotenv/config -r ts-node/register --inspect\" src/index.ts",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "lint": "eslint .",
    "format": "prettier . --write"
  },
  "dependencies": {
    "@personal/i18n": "workspace:*",
    "@personal/utils": "workspace:*",
    "@scraper/core": "workspace:*",
    "pino": "^8.16.2",
    "puppeteer": "^21.6.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.7.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.49.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "3.2.5",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
